



@model MovieModel
@{
    ViewBag.Title = $"{ViewBag.Action}";
}


<h2>@ViewBag.Action</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>


    @* NAME *@
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    @* NAME *@


    @* YEAR *@
    <div class="mb-3">
        <label asp-for="Year" class="form-label"></label>
        <input asp-for="Year" class="form-control" />
    </div>
    @* YEAR *@



    @* GENRE *@
    <div class="mb-3">
        <label asp-for="GenreModelId" class="form-label"></label>
        <select asp-for="GenreModelId" class="form-control">
            <option value="">>-- Select Genre --< </option>
                @foreach (var genre in ViewBag.Genres)
            {
                <option value="@genre.GenreModelId">@genre.Name</option>
            }
        </select>
    </div>
    @* GENRE *@



    @* RATING *@
    <div class="mb-3">
        <label asp-for="Rating" class="form-label"></label>
        <input asp-for="Rating" class="form-control" />
    </div>
    @* RATING *@

    <input type="hidden" asp-for="MovieModelId" />
    <button type="submit" class="btn btn-primary" >Save</button>

    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>





</form>